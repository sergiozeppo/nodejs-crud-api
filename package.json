{
  "name": "nodejs-crud-api",
  "version": "1.0.0",
  "description": "Simple CRUD API using in-memory database underneath",
  "main": "./src/index.ts",
  "engines": {
    "node": ">=22.9.0"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "start:dev": "ts-node-dev --transpile-only --respawn --no-notify src/index.ts",
    "start:prod": "tsc && node dist/index.js",
    "lint:fix": "npm run prettier && npm run eslint",
    "lint": "eslint . --ext ts --max-warnings 0 & npx prettier . --check",
    "prettier": "prettier --config .prettierrc \"./**/*.{ts,json,scss}\" --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergiozeppo/nodejs-crud-api.git"
  },
  "keywords": [
    "nodejs",
    "crud-api",
    "sergiozeppo"
  ],
  "author": "sergiozeppo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sergiozeppo/nodejs-crud-api.git/issues"
  },
  "homepage": "https://github.com/sergiozeppo/nodejs-crud-api.git#readme",
  "dependencies": {
    "@types/node": "^22.7.7",
    "@types/webpack": "^5.28.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "uuid": "^10.0.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0"
  }
}
